<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccesfullyRegisteredActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="-67dp"
        android:scaleType="centerCrop"
        android:src="@drawable/intro" />

    <ImageButton
        android:id="@+id/Reset_myImageButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/background_button_1"
        android:contentDescription="Nút trở lại"
        android:src="@drawable/baseline_arrow_back_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView: Quên mật khẩu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:text="Đổi mật khẩu thành công"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- TextView: Nhập email của bạn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:text="Vui lòng quay trở lại đăng nhập"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bntBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:text="Trở lại"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
